<%= link_to 'New Post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title,blog_url(year:post.created_at.year,month:post.created_at.month,day:post.created_at.day,id:post.permalink,subdomain: false),target:'_blank' %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<nav class="align-r">
<%= will_paginate(@posts, :renderer => WillPaginate::ActionView::LinkRenderer) %>
</nav>
