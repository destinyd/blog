<article role="article">
<header>
  <%= render "head_with_share",post:@post %>
</header>
<div class="entry-content typo">
  <%= raw @post.body %>
</div>
<footer>
      <p class="meta neighbor clearfix">
        <%= link_to @post.prev,@post.prev.to_permalink,class: 'float-l',title:@post.prev if @post.prev %>
        <%= link_to @post.next,@post.next.to_permalink,class: 'float-r',title:@post.next if @post.next %>
      </p>
    </footer>
</article>
