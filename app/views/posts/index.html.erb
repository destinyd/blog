<% if action_name == 'tag' %>
<h1>Tag <%= params[:id] %> blogs</h1>
<% end -%>

<% @posts.each do |post| %>
  <article>
    <%= render "posts/head",post:post %>
    <%= render "posts/body_cut",post:post %>
  </article>
<% end -%>
<nav class="align-r">
<%= will_paginate(@posts, :renderer => WillPaginate::ActionView::LinkRenderer) %>
</nav>
